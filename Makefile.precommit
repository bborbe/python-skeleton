.PHONY: precommit format lint typecheck test

# Run all precommit checks
precommit: format lint typecheck test
	@echo "All precommit checks passed"

# Format code with ruff
format:
	uv run ruff format .

# Lint code with ruff
lint:
	uv run ruff check . --fix

# Type check with mypy
typecheck:
	uv run mypy src

# Run tests with pytest
test:
	uv run pytest -v
